
@{
    ViewBag.Title = "Index";
}

<h2>Product List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
<tr>
    <td>@product.Id</td>
    <td>@product.Name</td>
    <td>@product.Price</td>
</tr>}
    </tbody>
</table>

<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Create New Product</a>

