@model IEnumerable<DATA_BASE_CONNECTION_ASP.NET.Models.Product>

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th> <!-- Add an Actions column for Edit/Delete -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("delete", "delete", new { id = item.Id }, new { @class = "btn btn-primary" })
                   
                </td>
            </tr>
        }
    </tbody>
</table>
