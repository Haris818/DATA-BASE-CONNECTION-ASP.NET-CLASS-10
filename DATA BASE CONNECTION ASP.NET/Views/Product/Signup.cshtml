@model DATA_BASE_CONNECTION_ASP.NET.Models.User

@{
    ViewBag.Title = "Signup";
}

<!-- Include Bootstrap 5 CSS (if not already included in the layout file) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Custom Styles -->
<style>
    body {
        background-color: #f8f9fa; /* Light Gray Background */
        font-family: 'Arial', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    /* Container styles */
    .signup-container {
        max-width: 400px;
        background-color: #fff; /* White background */
        border-radius: 12px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        padding: 30px;
        animation: fadeIn 1s ease-in-out;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    /* Form Labels */
    .form-group label {
        font-size: 16px;
        font-weight: bold;
        color: #333; /* Dark Gray */
    }

    /* Form Input Styles */
    .form-control {
        border-radius: 8px;
        padding: 12px;
        border: 1px solid #ccc; /* Light Gray Border */
        background-color: #f0f0f0; /* Light Gray Background */
        transition: border-color 0.3s;
        width: 100%;
    }

        .form-control:focus {
            border-color: #333; /* Dark Gray Border on Focus */
            background-color: #fff; /* White Background on Focus */
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        }

    .form-group .text-danger {
        font-size: 12px;
    }

    /* Button Styles */
    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #333; /* Dark Gray */
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        color: #fff; /* White text */
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #555; /* Lighter Gray on Hover */
            transform: scale(1.05);
        }

    /* Link Styles */
    .link {
        display: inline-block;
        margin-top: 10px;
        color: #333; /* Dark Gray */
        font-weight: bold;
        text-decoration: none;
        transition: color 0.3s;
    }

        .link:hover {
            color: #555; /* Lighter Gray on Hover */
            text-decoration: underline;
        }

    /* Flexbox Layout for Responsiveness */
    .signup-container {
        width: 100%;
        max-width: 420px;
        padding: 20px;
    }

        /* Adjustments for smaller screens */
        .signup-container h2 {
            font-size: 1.5rem;
        }

    .btn-primary {
        padding: 12px;
        font-size: 16px;
    }

    /* Remove margin and padding on smaller screens */
    .signup-container {
        margin: 30px auto;
    }
</style>

<div class="signup-container">
    <h2 class="text-center">Signup</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <!-- Name Field -->
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter your name" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <!-- Email Field -->
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <!-- Password Field -->
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <!-- Phone Number Field -->
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.PhoneNumber)
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Enter your phone number" })
            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Signup</button>
    }

    <p class="text-center mt-3">
        Already have an account? <a class="link" href="@Url.Action("Login", "Product")">Login</a>
    </p>
</div>

<!-- Include Bootstrap 5 JS and Popper.js (if not already included in the layout file) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
